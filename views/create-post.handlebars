<section>
    <a href="/dashboard" class="is-pulled-right">&larr; Back to Dashboard</a>
    <h2>Create a new blog post</h2>

    <form class="new-post-form">
        <div>
            <label for="post-title">Title:</label>
            <input class="input" type="text" id="post-title" placeholder="Blog Title"/>
        </div>
        <div>
            <label for="post-content">Content:</label>
            <input class="textarea is-large" id="post-content" name="post-content" placeholder="Write blog content here"/>
        </div>
        <button type="submit" class="button is-primary is-pulled-right">Create Post</button>
    </form>
</section>

<script src="/javascript/add-post.js"></script>